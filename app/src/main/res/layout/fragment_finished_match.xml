<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_fm_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:layout_weight="40"
            android:background="@color/listItemInactive" />

        <TextView
            android:id="@+id/hyphen_fm_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:layout_weight="5"
            android:background="@color/listItemInactive"
            android:text="-"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player_fm_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:layout_weight="40"
            android:background="@color/listItemInactive" />

        <TextView
            android:id="@+id/score_fm_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:layout_weight="10"
            android:background="@color/listItemInactive"
            android:orientation="horizontal"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_fm_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:layout_weight="40"
            android:background="@color/listItemInactive" />

        <TextView
            android:id="@+id/hyphen_fm_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:layout_weight="5"
            android:background="@color/listItemInactive"
            android:text="-"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player_fm_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:layout_weight="40"
            android:background="@color/listItemInactive" />

        <TextView
            android:id="@+id/score_fm_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:layout_weight="10"
            android:background="@color/listItemInactive"
            android:orientation="horizontal"
            android:textAlignment="center" />

    </LinearLayout>


</LinearLayout>
